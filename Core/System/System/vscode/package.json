{
  "name": "elysia-client",
  "displayName": "Elysia Client",
  "description": "VSCode client for Elysia HTTP API (decide/execute).",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:elysia.decideTool",
    "onCommand:elysia.executeDecision"
  ],
  "main": "out/extension.js",
  "contributes": {
    "commands": [
      { "command": "elysia.decideTool", "title": "Elysia: Decide Tool" },
      { "command": "elysia.executeDecision", "title": "Elysia: Execute Decision" }
    ],
    "configuration": {
      "type": "object",
      "title": "Elysia Client",
      "properties": {
        "elysia.baseUrl": {
          "type": "string",
          "default": "http://127.0.0.1:5000",
          "description": "Base URL of Elysia API"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.3.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0",
    "tslib": "^2.6.2"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}

